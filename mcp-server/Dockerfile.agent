# Dockerfile.agent - Template for MCP Agent servers
# Usage: Build with agent name parameter
# docker build -f Dockerfile.agent --build-arg AGENT_NAME=general -t general-agent-mcp .

ARG AGENT_NAME=general

FROM node:22-alpine

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S mcpserver -u 1001
USER mcpserver

WORKDIR /app

ARG AGENT_NAME

# copy only package files first (cache-friendly)
COPY --chown=mcpserver:nodejs utils/package*.json ./utils/
COPY --chown=mcpserver:nodejs mcp-server/shared/package*.json ./shared/
COPY --chown=mcpserver:nodejs mcp-server/${AGENT_NAME}-mcp-server/package*.json ./

# install all deps in one layer
RUN npm install --prefix ./utils --only=production && \
    npm install --prefix ./shared --only=production && \
    npm install --prefix . --only=production

# then copy full sources
COPY --chown=mcpserver:nodejs utils/ ./utils/
COPY --chown=mcpserver:nodejs mcp-server/shared/ ./shared/
COPY --chown=mcpserver:nodejs mcp-server/${AGENT_NAME}-mcp-server/ ./

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD node -e "console.log('Health Check - OK')" || exit 1

# Start the application
CMD ["npm", "start"]